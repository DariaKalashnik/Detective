<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_solve_problem4"
    style="@style/Scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.detective.SolveProblem4">

    <RelativeLayout style="@style/QuestionsLayout">

        <TextView
            android:id="@+id/textView1"
            style="@style/TextQuestion"
            android:text="@string/question4" />

        <EditText
            android:id="@+id/answer"
            android:layout_margin="70dp"
            style="@style/EditText.Answer"
            android:onClick="answer" />

        <Button
            android:id="@+id/checkIt"
            android:layout_below="@id/answer"
            style="@style/ButtonStart.Check"
            android:onClick="checkIt" />

    </RelativeLayout>
</RelativeLayout>
