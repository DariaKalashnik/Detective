<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_solve_problem3"
    style="@style/Scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.detective.SolveProblem3">


    <RelativeLayout
        android:layout_width="@dimen/match"
        android:layout_height="@dimen/match">

        <TextView
            android:id="@+id/textView1"
            style="@style/TextQuestionLand"
            android:layout_width="@dimen/match"
            android:layout_height="@dimen/wrap"
            android:text="@string/question3" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            style="@style/RadioGroup2"
            android:layout_width="@dimen/match"
            android:layout_height="@dimen/match"
            android:layout_below="@id/textView1">

            <RadioButton
                android:id="@+id/radioQ11"
                style="@style/MRadioButton"
                android:onClick="onRadioClick3"
                android:text="@string/answer_3_1" />

            <RadioButton
                android:id="@+id/radioQ12"
                style="@style/MRadioButton"
                android:onClick="onRadioClick3"
                android:text="@string/answer_3_2" />

            <RadioButton
                android:id="@+id/radioQ13"
                style="@style/MRadioButton"
                android:onClick="onRadioClick3"
                android:text="@string/answer_3_3" />

            <RadioButton
                android:id="@+id/radioQ14"
                style="@style/MRadioButton"
                android:onClick="onRadioClick3"
                android:text="@string/answer_3_4" />

            <RadioButton
                android:id="@+id/radioQ15"
                style="@style/MRadioButton"
                android:onClick="onRadioClick3"
                android:text="@string/answer_3_5" />

        </RadioGroup>

    </RelativeLayout>

</ScrollView>
