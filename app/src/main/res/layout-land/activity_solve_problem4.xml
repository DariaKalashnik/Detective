                android:text="@string/answer_4_2" />

            <RadioButton
                android:id="@+id/radioQ18"
                style="@style/MRadioButton"
                android:onClick="onRadioClick4"
                android:text="@string/answer_4_3" />

            <RadioButton
                android:id="@+id/radioQ19"
                style="@style/MRadioButton"
                android:onClick="onRadioClick4"
                android:text="@string/answer_4_4" />

            <RadioButton
                android:id="@+id/radioQ20"
                style="@style/MRadioButton"
                android:onClick="onRadioClick4"
                android:text="@string/answer_4_5" />

        </RadioGroup>

    </RelativeLayout>

</ScrollView>